# Nido Configuration Example
# Copy this to config.env and customize

# Paths
POOL_PATH="/var/lib/libvirt/images"
BACKUP_DIR="${POOL_PATH}/backups"
VMS_POOL="vms"

# Network
NETWORK_NAT="default"
NETWORK_HOSTONLY="hostonly56"

# Defaults
SSH_USER="vmuser"
VM_MEM_MB="2048"
VM_VCPUS="2"
VM_OS_VARIANT="debian12"
TEMPLATE_DEFAULT="template-headless"
GRAPHICS="spice"
VM_NESTED="false"
WAIT_TIMEOUT="60"
