# VMOPS config (copy to ./config.env and edit)

# Base paths
POOL_PATH=/media/jose/Data/libvirt-pool
BACKUP_DIR=/media/jose/Data/libvirt-pool/backups
VMS_POOL=vms

# Template defaults
TEMPLATE_DEFAULT=template-headless

# VM hardware defaults
VM_MEM_MB=2048
VM_VCPUS=2
VM_OS_VARIANT=debian12
VM_NESTED=false

# VM graphics: spice|vnc|none
GRAPHICS=spice

# Network names
NETWORK_HOSTONLY=hostonly56
NETWORK_NAT=default

# Helpers
SSH_USER=vmuser
WAIT_TIMEOUT=60
